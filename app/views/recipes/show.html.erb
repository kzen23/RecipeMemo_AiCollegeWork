<%= render @recipe %>

<div class="mt-4 d-flex gap-2">
  <%= link_to "編集", edit_recipe_path(@recipe), class: "btn btn-warning" %>
  <%= link_to "一覧に戻る", recipes_path, class: "btn btn-secondary" %>
  <%= button_to "削除", @recipe, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
</div>
