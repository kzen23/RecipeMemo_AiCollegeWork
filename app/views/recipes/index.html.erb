<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>レシピ一覧</h1>
  <%= link_to "新しいレシピを作成", new_recipe_path, class: "btn btn-primary" %>
</div>

<!-- 検索・フィルタフォーム -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: recipes_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-10">
        <%= form.text_field :query, value: params[:query], class: "form-control", placeholder: "料理名で検索..." %>
      </div>
      <div class="col-md-2">
        <%= form.submit "検索", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <!-- お気に入りフィルタボタン -->
    <div class="mt-3">
      <%= link_to favorites_recipes_path, class: "btn btn-warning" do %>
        <i class="bi bi-star-fill"></i> お気に入りのみ表示
      <% end %>
      <%= link_to "すべて表示", recipes_path, class: "btn btn-outline-secondary ms-2" %>
    </div>

    <% if params[:query].present? %>
      <div class="mt-3">
        <span class="text-muted">
          「<strong><%= params[:query] %></strong>」の検索結果: <%= @recipes.count %>件
        </span>
        <%= link_to "検索をクリア", recipes_path, class: "btn btn-sm btn-outline-secondary ms-2" %>
      </div>
    <% end %>
  </div>
</div>

<% if @recipes.empty? %>
  <div class="alert alert-info">
    <% if params[:query].present? %>
      「<%= params[:query] %>」に一致するレシピが見つかりませんでした。
    <% else %>
      レシピがまだ登録されていません。新しいレシピを作成してみましょう！
    <% end %>
  </div>
<% else %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @recipes.each do |recipe| %>
      <div class="col">
        <div class="card h-100">
          <% if recipe.image_url.present? %>
            <img src="<%= recipe.image_url %>" class="card-img-top" alt="<%= recipe.name %>" style="height: 200px; object-fit: cover;">
          <% else %>
            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
              <span class="text-white">画像なし</span>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= recipe.name %>
              <% if recipe.favorite %>
                <span class="badge bg-warning text-dark">お気に入り</span>
              <% end %>
            </h5>
            <p class="card-text">
              <% if recipe.category.present? %>
                <span class="badge bg-info"><%= recipe.category %></span>
              <% end %>
            </p>
            <p class="card-text text-muted small">
              <% if recipe.cooking_time.present? %>
                <i class="bi bi-clock"></i> <%= recipe.cooking_time %>分
              <% end %>
              <% if recipe.servings.present? %>
                <i class="bi bi-people"></i> <%= recipe.servings %>人分
              <% end %>
            </p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <%= link_to "詳細を見る", recipe, class: "btn btn-sm btn-outline-primary" %>
            <%= button_to toggle_favorite_recipe_path(recipe), method: :patch, class: "btn btn-sm #{recipe.favorite ? 'btn-warning' : 'btn-outline-warning'}", form: { style: 'display: inline;' } do %>
              <i class="bi bi-star<%= '-fill' if recipe.favorite %>"></i>
              <%= recipe.favorite ? 'お気に入り解除' : 'お気に入り' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
